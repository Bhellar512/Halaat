<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.halaat.halaat.Activity.RecordAudioActivity">

    <ImageButton
        android:id="@+id/ibRecordButton"
        android:layout_width="102dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:adjustViewBounds="false"
        android:background="@drawable/com_facebook_button_background"
        app:srcCompat="@drawable/ic_mic_white_48dp" />

    <TextView
        android:id="@+id/tvRecordAudioView"
        android:layout_width="282dp"
        android:layout_height="75dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/ibRecordButton"
        android:layout_marginStart="0dp"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:text="Tap to Record Audio"
        android:textSize="24sp"
        android:textStyle="bold" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/audiodisplay"
        android:layout_width="match_parent"
        android:layout_height="490dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />
</RelativeLayout>
